            </div>

        </div>


    </div>

    <div class="bucketPageTitle">

        <p class="bucketTitle">SEPET:</p>

    </div>

    <div class="ProductOutCardFixed">
        @foreach (var pro in Model)
        {
            <form action="/cart/bucketExit">
            <div class="ProductCard">
                <div class="productPhotoStyle" style="background-image:url(@pro.bucketPhoto.ToString()); background-size:cover"></div>
                <div class="productTitleCard">
                    <p class="productTitle">@pro.bucketName</p>
                </div>
                <div class="productDescCard">
                    <p class="productDesc">@pro.bucketPrice</p>
                </div>
                <input type="hidden" name="bucketProductId" value="@pro.bucketId">
                <input type="submit" value="Sepetten çıkar">
            </div>
            </form>
        }


    </div>

</body>